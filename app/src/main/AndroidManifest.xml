<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mysales.com">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomerListActivity"
            android:label="@string/title_customer_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CustomerItemDetailActivity"
            android:label="@string/title_customer_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddDoctorActivity"
            android:label="@string/title_add_doctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DoctorListActivity"
            android:label="@string/title_activity_doctor_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditDoctorActivity"
            android:label="@string/title_edit_doctor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DoctorDetailActivity"
            android:label="@string/title_activity_doctor_detail"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>